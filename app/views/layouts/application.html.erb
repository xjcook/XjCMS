<!DOCTYPE html>
<html lang="en">
<head>
  <title>CMS</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="wrapper">
		<div id="header">
	     	This is the Header
	 	</div>
	 	<div id="navigation">
	     	<ul>
	     		<li><%= link_to "Home", root_url %></li>
	     		<li><%= link_to "Pages", pages_path %></li>
				<li><%= link_to "Stories", stories_path %></li>
				<li><%= link_to "Signup", signup_path %></li>
			</ul>
	 	</div>
	 	<div id="contentwrapper">
	 	<div id="content">
		 	<% if flash[:notice] %>
				<p id="notice"><%= flash[:notice] %></p>
			<% end %>	
				
			<%= yield %>
		</div>
		<div id="rightcolumn">
			<%= render 'sessions/form' %>
		</div>
		</div>
		<div id="footer">
			This is the Footer
		</div>   
	</div>
</body>
</html>
