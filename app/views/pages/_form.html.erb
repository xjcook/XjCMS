<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h3>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="field">
    <%= f.label :title, t(:title) %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :locale, t(:language) %>
    <%= collection_select(:page, :locale_id, Locale.all, :id, :language) %>
  </div>
  <div class="field_text">
    <%= f.label :content, t(:content) %><br />
    <%= f.cktext_area :content, :ckeditor => {:toolbar => 'Easy'} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
