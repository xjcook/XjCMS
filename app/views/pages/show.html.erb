<div class="page">
  <h2><%= @page.title %></h2>
  <%= @page.content.html_safe %>
  <% if has_right?(:section => :pages, :id => @page.id) %>
    <p>
      <em><%= @page.user.author %></em>
      | <%= link_to t(:edit), edit_page_path(@page) %>
      | <%= link_to t(:destroy), @page, confirm: t(:are_you_sure), method: :delete %>
    </p>
  <% end %>
</div>
