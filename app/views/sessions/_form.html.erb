<% if session[:user_id].nil? %>
	<%= form_tag sessions_path do %>
	  <div class="field">
	    <%= label_tag :login %>
	    <%= text_field_tag :login, params[:login] %>
	  </div>
	  <div class="field">
	    <%= label_tag :password %>
	    <%= password_field_tag :password %>
	  </div>
	  <div class="actions"><%= submit_tag "Log in" %></div>
	<% end %>
<% else %>
	<%= button_to "Logout", logout_path, :method => :delete %>
<% end %>
